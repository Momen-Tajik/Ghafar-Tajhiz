@using DataAccess.Models
@model Product
@{
    ViewData["Title"] = "Index";
}

<!-- Header -->
<header class="productHeader">
    <div class="product">
        <div class="product-image">
            <img src="/api/FileUpload/GetFile?filename=@Model.ImageUrl" alt="@Model.ProductName" class="product-img">
        </div>

        <div class="product-content">
            <div class="product-details">
                <h1>@Model.ProductName</h1>

                <div class="features">
                    <ul>
                        <li>ظرفیت استثنایی پخت ۱۸ تکه جوجه در هر بار، راندمان تولید شما را تا ۴۰٪ افزایش می‌دهد</li>
                        <li>سیستم پخت ۳۶۰ درجه و کنترل دمای دیجیتال، کیفیت یکسان هر بار پخت را تضمین می‌کند</li>
                        <li>کاهش ۳۰٪ در مصرف انرژی و ۵۰٪ در نیروی انسانی مورد نیاز برای بخش کباب</li>
                        <li>طراحی استیل ضدزنگ با سینی جداشونده، نظافت و رعایت پروتکل‌های بهداشتی را تسهیل می‌کند</li>
                        <li>@Model.ProductDescription</li>
                    </ul>
                </div>

                <div class="purchase-section">
                    <div class="price">
                        <!-- اضافه کردن موجودی انبار به صورت hidden -->
                        <input id="stockQuantity" type="hidden" value="@Model.StockQuantity">
                        <input id="basePrice" type="hidden" value="@Model.Price">
                        <strong id="basePriceShow">قیمت نهایی: @Model.Price.ToString("N0") تومان</strong>
                    </div>
                    <div class="quantity">
                        <label>تعداد:</label>
                        <!-- تنظیم max بر اساس موجودی انبار -->
                        @if (Model.StockQuantity > 0)
                        {
                            <input id="countInput"
                                   type="number"
                                   min="1"
                                   max="@Model.StockQuantity"
                                   value="1"
                                   class="quantity-input">
                            <span id="stockMessage" class="stock-message" style="font-size: 12px; color: #666;">
                                موجودی انبار: @Model.StockQuantity عدد
                            </span>
                        }
                        else
                        {
                            <input id="countInput"
                                   type="number"
                                   min="0"
                                   max="0"
                                   value="0"
                                   class="quantity-input"
                                   disabled>
                            <span id="stockMessage" class="stock-message" style="font-size: 12px; color: red;">
                                موجودی: ۰
                            </span>
                        }
                    </div>
                </div>

                @if (Model.IsAvailable && Model.StockQuantity > 0)
                {
                    <a href="Product.html" class="btnProduct">افزودن به سبد خرید</a>
                }
                else
                {
                    <a href="Product.html" class="btnProduct disabled" style="opacity: 0.5; cursor: not-allowed;">
                        این محصول موجود نمیباشد
                    </a>
                }
            </div>
        </div>
    </div>
</header>