@model DataAccess.Models.Category

@{
    ViewData["Title"] = "ویرایش دسته‌بندی";
}

<div class="page-header">
    <h1>ویرایش دسته‌بندی</h1>
    <p>اطلاعات دسته‌بندی را ویرایش کنید</p>
</div>

<div class="admin-card">

    <form asp-action="Edit" method="post" class="admin-form">

        <input type="hidden" asp-for="CategoryId" />

        <div asp-validation-summary="ModelOnly" class="validation-error"></div>

        <div class="form-group">
            <label asp-for="CategoryName">نام دسته‌بندی</label>
            <input asp-for="CategoryName" class="form-input" />
            <span asp-validation-for="CategoryName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryDescription">توضیحات</label>
            <textarea asp-for="CategoryDescription" class="form-textarea"></textarea>
            <span asp-validation-for="CategoryDescription" class="validation-error"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="form-button">
                ذخیره تغییرات
            </button>

            <a asp-action="Index" class="form-button secondary">
                بازگشت
            </a>
        </div>

    </form>

</div>

