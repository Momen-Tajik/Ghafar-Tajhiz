@model DataAccess.Models.Category

@{
    ViewData["Title"] = "حذف دسته‌بندی";
}

<div class="page-header">
    <h1>حذف دسته‌بندی</h1>
    <p>این عملیات غیرقابل بازگشت است</p>
</div>

<div class="admin-card admin-warning">

    <div class="admin-warning-title">
        ⚠️ آیا از حذف این دسته‌بندی مطمئن هستید؟
    </div>

    <div class="admin-warning-text">
        با حذف این دسته‌بندی، اطلاعات مربوط به آن از سیستم حذف خواهد شد.
    </div>

    <div class="details-list">
        <div class="details-item">
            <div class="details-label">نام دسته‌بندی:</div>
            <div class="details-value">@Model.CategoryName</div>
        </div>

        <div class="details-item">
            <div class="details-label">توضیحات:</div>
            <div class="details-value">
                @(string.IsNullOrWhiteSpace(Model.CategoryDescription)
                    ? "—"
                    : Model.CategoryDescription)
            </div>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="form-actions">
        <input type="hidden" name="id" value="@Model.CategoryId" />
        <button type="submit" class="form-button danger">حذف دسته‌بندی</button>
        <a asp-action="Index" class="form-button secondary">انصراف</a>
    </form>

</div>
