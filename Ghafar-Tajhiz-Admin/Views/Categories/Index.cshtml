
@model IEnumerable<DataAccess.Models.Category>

@{
    ViewData["Title"] = "دسته‌بندی‌ها";
}

<div class="page-header">
    <h1>مدیریت دسته‌بندی‌ها</h1>
    <p>ایجاد، ویرایش و حذف دسته‌بندی‌های محصولات</p>
</div>

<div class="admin-card">

    <div style="margin-bottom:16px;">
        <a asp-action="Create" class="form-button">
            <i class="fa fa-plus"></i>
            افزودن دسته‌بندی جدید
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            هنوز هیچ دسته‌بندی‌ای ثبت نشده است.
        </div>
    }
    else
    {
        <table class="admin-table">
            <thead>
                <tr>
                    <th>نام دسته‌بندی</th>
                    <th>توضیحات</th>
                    <th style="width:140px;">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>
                            @(string.IsNullOrWhiteSpace(item.CategoryDescription)
                                ? "—"
                                : item.CategoryDescription)
                        </td>
                        <td>
                            <div class="action-group">
                                <a asp-action="Edit"
                                   asp-route-id="@item.CategoryId"
                                   class="action-btn action-edit"
                                   title="ویرایش">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a asp-action="Details"
                                   asp-route-id="@item.CategoryId"
                                   class="action-btn action-view"
                                   title="جزئیات">
                                    <i class="fa fa-eye"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.CategoryId"
                                   class="action-btn action-delete"
                                   title="حذف">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
