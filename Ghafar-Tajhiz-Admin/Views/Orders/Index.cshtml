@using DataAccess.Enums
@model List<BusinessLogic.BasketServices.Models.AdminOrderDto>

@{
    ViewData["Title"] = "سفارش‌ها";
}

<div class="page-header">
    <h1>مدیریت سفارش‌ها</h1>
    <p>بررسی وضعیت سفارش‌های ثبت‌شده</p>
</div>

<div class="admin-card">
    <table class="admin-table">
        <thead>
            <tr>
                <th>نام</th>
                <th>شماره تماس</th>
                <th>تاریخ پرداخت</th>
                <th>محصولات</th>
                <th>وضعیت</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.MobileNumber</td>
                    <td>@item.PaidDate</td>
                    <td>@string.Join(" + ", item.items)</td>
                    <td>
                        @if (item.Status == BasketStatus.Paid)
                        {
                            <span class="badge badge-warning">پرداخت شده</span>
                        }
                        else if (item.Status == BasketStatus.Shipped)
                        {
                            <span class="badge badge-success">ارسال شده</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">لغو شده</span>
                        }
                    </td>
                    <td>
                        <div class="action-group">
                            <a asp-action="Accept" asp-route-id="" class="action-btn action-accept"><i class="fa fa-check"></i></a>
                            <a asp-action="Cancel" asp-route-id="" class="action-btn action-cancel"><i class="fa fa-times"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
